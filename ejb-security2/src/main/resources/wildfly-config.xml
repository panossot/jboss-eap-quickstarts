            <configuration name="default-config">
                <credentials>
                    <oauth2-bearer-token token-endpoint-uri="http://${env.RHSSO_ADDRESS}/auth/realms/master/protocol/openid-connect/token">
                        <client-credentials client-id="eap" client-secret="${env.RHSSO_CLIENT_SECRET}"/>
                        <resource-owner-credentials name="${env.RHSSO_USER_NAME}" password="${env.RHSSO_USER_PASSWORD}" />
                    </oauth2-bearer-token>
                </credentials>
                <sasl-mechanism-selector selector="OAUTHBEARER"/>
                <providers>
                    <use-service-loader />
                </providers>
            </configuration>
        </authentication-configurations>
    </authentication-client>
